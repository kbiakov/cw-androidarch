<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.Apptheme" parent="@android:style/Theme.Material.Light.NoActionBar">
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primary_dark</item>
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:windowActionModeOverlay">true</item>
    <item name="android:actionButtonStyle">@style/ActionButton</item>
  </style>

  <style name="activated" parent="Theme.Apptheme">
    <item name="android:background">@drawable/activated</item>
  </style>

  <style name="ActionButton" parent="@android:style/Widget.ActionButton">
    <item name="android:drawablePadding">@dimen/action_item_padding</item>
  </style>
</resources>